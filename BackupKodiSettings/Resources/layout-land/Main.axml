<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textColor="#f00"
            android:text="Important: After you have made any changes to the Skin settings you MUST close Kodi before you click the Backup button below. This is because Kodi doesn't save skin changes to file until it closes down"
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <Button
            android:text="Backup Xonfluence and Favourites settings files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnBackup"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textColor="#f00"
            android:text="Important: Make sure Kodi has been closed before you click the Restore button below."
            android:paddingBottom="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <Button
            android:text="Restore Xonfluence and Favourites settings files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnRestore"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <BackupKodiSettings.ImageButtonScaled
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/btnBackupSD"
                android:drawableLeft="@drawable/ssd2"
                android:text="Backup Sports Donkey"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp" />
            <BackupKodiSettings.ImageButtonScaled
                android:text="Restore SportsDonkey"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/btnRestoreSD"
                android:drawableLeft="@drawable/ssd2"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout1">
            <Button
                android:text="Get Pulse Pin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnGetPulsePin"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="1dp"
                android:layout_weight="3" />
            <TextView
                android:text="0000"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/txtPulsePin"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="2"
                android:singleLine="true"
                android:layout_marginLeft="2dp" />
            <ProgressBar
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/pbarPulsePin"
                android:visibility="invisible"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:scaleX="0.6"
                android:scaleY="0.6" />
            <Button
                android:text="Launch Kodi"
                android:id="@+id/btnLaunchKodi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="14dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>